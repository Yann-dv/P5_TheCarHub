@model IEnumerable<theCarHub.Models.CarViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-light">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>In Watchlist</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <button id="@item.CarId" data-val="@item.InWatchlist" class="btn watchlistToggleBtn">
                    @(item.InWatchlist ? " - " : " + ")
                </button>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CarId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>
        jQuery(document).ready(function () {
            window.$('.btn.watchlistToggleBtn').click(function (e) {
                var btn = window.$(this);
                var carId = btn.attr('id');
                var carVal = btn.attr('data-val') === "False" ? 0 : 1;
                window.$.get('/Cars/WatchlistToggler?id=' + carId + '&val=' + carVal,
                    function (data) {
                        if (data == 0) {
                            btn.attr('data-val', 'False');
                            btn.html(' + ');
                        }
                        else if (data == 1) {
                            btn.attr('data-val', 'True');
                            btn.html(' - ');
                        }
                    });
            });

        });

    </script>

}
