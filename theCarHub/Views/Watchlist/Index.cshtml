@model IEnumerable<theCarHub.Models.CarViewModel>

@{
    ViewData["Title"] = "My Watchlist";
}

<h1>Index</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InWatchlist)
        </th>
            <th>
                @Html.DisplayNameFor(model => model.Watched)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InWatchlist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Watched)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>

        </tr>
    }
    </tbody>
</table>