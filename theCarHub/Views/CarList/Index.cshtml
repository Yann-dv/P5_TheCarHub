@model IEnumerable<theCarHub.Models.CarViewModel>

@{
    ViewData["Title"] = "Cars gallery";
}

<h1 class="text-decoration-underline">All our cars</h1>

<table class="table text-light">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToShow)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToShow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>

        </tr>
    }
    </tbody>
</table>